<% if products.any? %>
<table class="table table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>商品名稱</th>
      <th>賣家</th>
      <th>管理</th>
    </tr>
  </thead>
  <tbody>
    <% products.each do |product| %>
    <tr>
      <td><%= product.id %></td>
      <td><%= link_to product.title, ruten_product_path(product) %></td>
      <td><%= link_to product.user.account, ruten_user_products_path(product.user) %></td>
      <td>
        <%= origin_button product.detail_url %>
        <%= fetch_button fetch_remote_ruten_product_path(product) %>
        <%= delete_button ruten_product_path(product) %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= paginate products %>
<% else %>
<%= no_data_alert %>
<% end %>
