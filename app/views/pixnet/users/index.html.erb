<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <%= render "shared/caption", site: 'Pixnet', title: '使用者管理' %>
      <%= breadcrumb('Pixnet', '使用者管理') %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <%= link_to '新增帳號', new_pixnet_user_path, class: 'btn btn-sm btn-primary' %>
      <hr />
      <% if current_collection.any? %>
      <table class="table">
        <thead>
          <tr>
            <th>#</th>
            <th>帳號</th>
            <th>暱稱</th>
            <th>文章數</th>
            <th>動作</th>
          </tr>
        </thead>
        <tbody>
          <% current_collection.each_with_index do |user, num| %>
          <tr>
            <th scope="row"><%= num %></th>
            <td><%=user.account %></td>
            <td><%=user.name.html_safe %></td>
            <td><%= link_to user.articles.count, pixnet_user_articles_path(user) %></td>
            <td>
              <%= origin_button pixnet_blog_link(user) %>
              <%= fetch_button fetch_articles_pixnet_user_path(user) %>
              <%= edit_button edit_pixnet_user_path(user) %>
              <%= delete_button pixnet_user_path(user) %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate current_collection %>
      <% else %>
      <%= no_data_alert %>
      <% end %>
    </div>
  </div>
</div>
