<div class="form-area">
  <%= simple_form_for current_object do |f| %>
  <br style="clear:both">
  <div class="form-group">
    <%= f.input :account, label: '帳號',
      required: true,
      wrapper_html: { class: ("error" if current_object.errors[:account].any?) },
      label_html: { class: "control-label" }, input_html: { class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= f.input :name, label: '暱稱', label_html: { class: "control-label" }, input_html: { class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= f.input :keyword, label: '關鍵字', label_html: { class: "control-label" }, input_html: { class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= f.input :site_category, label: '分類', label_html: { class: "control-label" }, input_html: { class: 'form-control' } %>
  </div>
  <div class="form-group">
    <label class="control-label"> 點擊數</label>
    <p class="help-block">未同步</p>
    <%= f.input :description, as: :text, label: '介紹', label_html: { class: "control-label" }, input_html: { class: 'form-control',  maxlength: '140', row: '7' } %>
  </div>
  <div class="form-group">
    <%= f.button :submit, '儲存', class: 'btn btn-sm btn-success' %>
    <%=  link_to '同步並儲存', 'javascript:void(0)', id: 'sync', class: 'btn btn-sm btn-primary' %>
  </div>
  <% end %>
</div>

