<% if articles.any? %>
<table class="table table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>標題</th>
      <th>作者</th>
      <th>管理</th>
    </tr>
  </thead>
  <tbody>
    <% articles.each do |article| %>
    <tr>
      <td><%= article.id %></td>
      <td><%= link_to article.title, pixnet_article_path(article) %></td>
      <td><%= link_to article.user.name, pixnet_user_articles_path(article.user) %></td>
      <td>
        <%= origin_button pixnet_article_link(article) %>
        <%= fetch_button fetch_remote_pixnet_article_path(article) %>
        <%= delete_button pixnet_article_path(article) %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= paginate articles %>
<% else %>
<%= no_data_alert %>
<% end %>
